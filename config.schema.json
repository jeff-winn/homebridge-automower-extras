{
    "pluginAlias": "Homebridge Automower Platform",
    "pluginType": "platform",
    "singular": false,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "default": "Homebridge Automower Platform",
          "minLength": 1,
          "required": true          
        },
        "username": {
          "title": "Email Address",
          "type": "string",
          "required": false,
          "x-schema-form": {
            "type": "email"
          },
          "condition": {
            "functionBody": "return model.authentication_mode === 'password' "
          }
        },
        "password": {
          "title": "Password",
          "type": "string",
          "required": false,
          "x-schema-form": {
            "type": "password"
          },
          "condition": {
            "functionBody": "return model.authentication_mode === 'password' "
          }
        },
        "lang": {
          "title": "Language",
          "type": "string",
          "required": true,
          "default": "en",
          "oneOf": [
            {
              "title": "English (en)",
              "enum": [
                "en"
              ]
            }
          ]
        },
        "appKey": {
          "title": "Application Key",
          "description": "This is the application key of the application registered on the Husqvarna Developer portal.",
          "type": "string",
          "default": "78e47163-dd2a-48bf-9af9-3cec8cadae00",
          "minLength": 1,
          "required": true,
          "condition": {
            "functionBody": "return model.authentication_mode === 'password' "
          }
        },
        "authentication_mode": {
          "title": "Authentication Mode",
          "type": "string",
          "required": true,
          "default": "password",
          "oneOf": [
            {
              "title": "Password (Not Supported)",
              "enum": [
                "password"
              ]
            },
            {
              "title": "Client Credentials",
              "enum": [
                "client_credentials"
              ]
            }
          ]
        },
        "authentication_mode_no_longer_supported": {
          "type": "label",
          "title": "ATTENTION! Your current Authentication Mode is no longer supported by the Husqvarna platform, please choose a different value from the options available.",
          "labelHtmlClass": "text-warning",
          "condition": {
            "functionBody": "return model.authentication_mode === 'password' "
          }
        },
        "application_key": {
          "title": "Application Key",
          "description": "This is the application key of the application registered on the Husqvarna Developer portal.",
          "type": "string",
          "minLength": 1,
          "required": true,
          "condition": {
            "functionBody": "return model.authentication_mode === 'client_credentials' "
          }
        },
        "application_secret": {
          "title": "Application Secret",
          "description": "This is the application secret of the application registered on the Husqvarna Developer portal.",
          "type": "string",
          "minLength": 1,
          "required": false,
          "x-schema-form": {
            "type": "password"
          },
          "condition": {
            "functionBody": "return model.authentication_mode === 'client_credentials' "
          }
        }
      }
    },
    "layout": [
      {
        "type": "flex",
        "flex-flow": "column-count: 2",
        "items": [
          "name",
          "lang"
        ]
      },
      {
        "type": "fieldset",
        "title": "Account Settings",
        "description": "Changing any settings here could cause the plugin to fail while logging into the Husqvarna platform, so please proceed with caution.",
        "expandable": false,
        "items": [
          "authentication_mode_no_longer_supported",
          "authentication_mode",
          "username",
          "password",
          "appKey",
          "application_key",
          "application_secret"
        ]
      }
    ]
  }
