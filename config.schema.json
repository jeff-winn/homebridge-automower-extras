{
    "pluginAlias": "Homebridge Automower Platform",
    "pluginType": "platform",
    "singular": false,
    "schema": {
      "type": "object",
      "properties": {
        "username": {
          "title": "Email Address",
          "type": "string",
          "minLength": 1,
          "required": true
        },
        "password": {
          "title": "Password",
          "type": "string",
          "minLength": 1,
          "required": true
        },
        "appKey": {
          "title": "Application Key",
          "description": "This is the application key which identifies this plugin; changing this value will require another account registered with the Husqvarna Developer Portal.",
          "type": "string",
          "default": "78e47163-dd2a-48bf-9af9-3cec8cadae00",
          "minLength": 1,
          "required": true
        },
        "logLevel": {
          "title": "Log Level",
          "type": "string",
          "description": "The logging level in use by this platform instance, will not affect other plugins.",
          "required": true,
          "default": "info",
          "oneOf": [
            {
              "title": "Debug",
              "enum": [
                "debug"
              ]
            },
            {
              "title": "Information (Default)",
              "enum": [
                "info"
              ]
            },
            {
              "title": "Warning",
              "enum": [
                "warn"
              ]
            },
            {
              "title": "Error",
              "enum": [
                "error"
              ]
            }
          ]
        }
      }
    },
    "layout": [
      "username",
      "password",
      {
        "type": "fieldset",
        "title": "Advanced Settings",
        "description": "Changing any settings in here could break the platform instance, proceed with caution.",
        "expandable": true,
        "items": [
          "logLevel",
          "appKey"
        ]
      }
    ]
  }
