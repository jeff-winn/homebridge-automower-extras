{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node",
			"preLaunchTask": "build",
			"windows": {
				"program": "${env:APPDATA}\\npm\\node_modules\\homebridge\\bin\\homebridge",
				"args": [
					"-D",
					"-U",
					"${workspaceFolder}/.homebridge"
				],
				"env": {
					"FORCE_COLOR": "1",
					"DEBUG": "homebridge-automower-platform",
					"NODE_ENV": "development"
				}
			}
		}
	]
}
