{
    "pluginAlias": "Homebridge Automower Platform",
    "pluginType": "platform",
    "singular": false,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "default": "Homebridge Automower Platform",
          "minLength": 1,
          "required": true          
        },
        "username": {
          "title": "Email Address",
          "type": "string",
          "required": false,
          "x-schema-form": {
            "type": "email"
          }
        },
        "password": {
          "title": "Password",
          "type": "string",
          "required": false,
          "x-schema-form": {
            "type": "password"
          }
        },
        "lang": {
          "title": "Language",
          "type": "string",
          "required": true,
          "default": "en",
          "oneOf": [
            {
              "title": "English (en)",
              "enum": [
                "en"
              ]
            }
          ]
        },
        "appKey": {
          "title": "Application Key",
          "description": "This is the application key of the application registered on the Husqvarna Developer portal.",
          "type": "string",
          "default": "78e47163-dd2a-48bf-9af9-3cec8cadae00",
          "minLength": 1,
          "required": true
        },
        "appSecret": {
          "title": "Application Secret",
          "description": "This is the application secret of the application registered on the Husqvarna Developer portal.",
          "type": "string",
          "default": "78e47163-dd2a-48bf-9af9-3cec8cadae00",
          "minLength": 1,
          "required": true
        }
      }
    },
    "layout": [
      {
        "type": "flex",
        "flex-flow": "column-count: 2",
        "items": [
          "name",
          "lang"
        ]
      },
      {
        "type": "fieldset",
        "title": "Authorization Settings",
        "description": "Changing any settings in here could cause the plugin to fail while logging into the Husqvarna platform, proceed with caution.",
        "expandable": true,
        "items": [
          "username",
          "password",
          "appKey"
        ]
      }
    ]
  }
